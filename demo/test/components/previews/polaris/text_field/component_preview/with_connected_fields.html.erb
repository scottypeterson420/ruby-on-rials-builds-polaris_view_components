<%= render Polaris::TextField::Component.new(
  attribute: :attribute,
  label: "Weight",
  type: "number",
  value: "10.6"
) do |component| %>
  <% component.with(:connected_left) do %>
    <%= render Polaris::Select::Component.new(
      attribute: :attribute,
      label: "Weight unit",
      label_hidden: true,
      value: "kg",
      options: [{ label: "kg", value: "kg" }, { label: "lb", value: "lb" }]
    ) %>
  <% end %>
  <% component.with(:connected_right) do %>
    <%= render Polaris::Button::Component.new do %>
      Submit
    <% end %>
  <% end %>
<% end %>
