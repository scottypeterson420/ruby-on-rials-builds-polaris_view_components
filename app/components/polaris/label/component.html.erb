<%= content_tag('div', content_tag_options) do %>
  <% if @label.present? %>
    <%= @form.label(@attribute, @label, label_attrs) %>
  <% elsif content.present? %>
    <%= @form.label(@attribute, label_attrs) do %>
      <%= content %>
    <% end %>
  <% else %>
    <%= @form.label(@attribute, label_attrs) %>
  <% end %>
<% end %>
