<%= content_tag('div', content_tag_options) do %>
  <% if content.blank? && @actions.blank? %>
    <%= title %>
  <% else %>
    <%= render Polaris::Stack::Component.new(alignment: 'trailing') do %>
      <%= render Polaris::StackItem::Component.new(fill: true) do %>
        <%= title %>
      <% end %>

      <% if @actions.present? %>
        <%= render Polaris::ButtonGroup::Component.new do %>
          <% @actions.each do |action| %>
            <%= render_plain_complex_action_button(action) %>
          <% end %>
        <% end %>
      <% end %>

      <%= content %>
    <% end %>
  <% end %>
<% end %>
